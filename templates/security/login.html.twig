{% extends 'base.html.twig' %}
{% trans_default_domain 'security' %}
{% block title %}{{ parent() }} - {{ 'security.login.title'|trans }}{% endblock %}

{% block body %}
    {{ parent() }}
    <div id="intro" style="background-image: url({{ asset('build/images/home.jpg') }});">
        <div class="container pb-2">
            <div class="row d-flex justify-content-center text-white mt-5 my-3">
                <div class="col-7 offset-1 mt-5">
                    <h1 class="mt-3 mb-3 text-center">{{ 'security.login.title'|trans }}</h1>
                    <div class="card shadow">
                        <div class="card-body">
                            {% if error %}
                                <div class="alert alert-danger">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}
                            <form accept-charset="UTF-8" role="form" action="{{ path('app_login') }}" method="post">
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Username" id="username" name="username" value="{{ last_username }}" type="text">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Password" id="password" name="password" type="password" value="">
                                    </div>
                                    <div class="checkbox">
                                        <label class="text-primary">
                                            <input name="_remember" type="checkbox" value="Remember Me"> {{ 'security.login.remember-me'|trans }}
                                        </label>
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <button class="btn btn-lg btn-success btn-block" type="submit">{{ 'security.login.submit'|trans }}</button>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
