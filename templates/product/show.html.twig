{% extends 'base.html.twig' %}
{% trans_default_domain 'product' %}
{% block title %}
    {{ parent() }} - {{ 'product.show.title'|trans }} - {{ product.name }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container mb-4 mt-4">
        <h1 class="mt-1 mb-4">{{ 'product.show.title'|trans }}</h1>
        <div class="card shadow">
            <div class="container-fluid">
                <div class="wrapper row">
                    <div class="preview col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-{{ product.id }}">
                                <img src="{{ asset('build/images/' ~ product.image) }}" alt="{{ product.name }}" class="img-thumbnail"/>
                            </div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title text-warning mt-3">{{ product.name }}</h3>
                        <p class="product-description mt-2">{{ product.description }}</p>
                        <h4 class="price mt-3">
                            <span>{{ product.price|round(2) }} â‚¬</span>
                        </h4>
                        <div class="action mt-2 mb-2">
                            <form class="form-inline mt-1" method="get">
                                <input class="form-control" type="number" value="1" name="quantity" id="quantity">
                                <label class="ml-3">{{ 'product.label.quantity'|trans }}</label>
                            </form>
                            <a class="add-to-cart btn btn-success mt-2" id="cart-add-product"
                               type="button" href="{{ path('cart_add_product', {'slug': product.slug}) }}">
                                {{ 'product.button.add-to-cart'|trans }}
                            </a>
                            <a class="add-to-cart btn btn-primary ml-2 mt-2"
                               type="button" href="{{ path('product_list') }}">
                                {{ 'product.button.back-to-list'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
